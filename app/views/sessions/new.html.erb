<div class="page-header">
  <h2>Sign In</h2>
</div>
<div class="container">

  <div class="well">
  <%= form_tag do %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, params[:name], class: "form-control"%>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= submit_tag "Sign In", class: "btn btn-lg btn-info"%>
    </div>
  <%end%>
  </div>
</div>

</div>
